{% extends 'base.html.twig' %}

{% block title %}Spent index{% endblock %}

{% block body %}
    <div class="w-full h-screen justify-center align-center p-12">
        <h1 class="text-3xl font-bold font-heading text-center mb-10 text-red-400">TOUTES LES DEPENSES</h1>

        <div class="w-full justify-evenly">
            <table class="table w-full text-gray-400 border-separate space-y-6 text-sm">
                <thead class="bg-red-400 text-white">
                    <tr>
                        <th class="p-3 text-left">Id</th>
                        <th class="p-3 text-left">Expense_name</th>
                        <th class="p-3 text-left">Cost</th>
                        <th class="p-3 text-left">actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for spent in spents %}
                <tr class="bg-blue-200 lg:text-black">
                    <td class="p-3">{{ spent.id }}</td>
                    <td class="p-3">{{ spent.expenseName }}</td>
                    <td class="p-3">{{ spent.cost }}</td>
                    <td class="p-3">
                        <a href="{{ path('spent_show', {'id': spent.id}) }}">show</a>
                        <a href="{{ path('spent_edit', {'id': spent.id}) }}">edit</a>
                    </td>
                </tr>
                {% else %}
                    <tr class="text-center h-16">
                        <td colspan="6">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="w-full">
            <a class="bg-green-500 w-1/4 py-3 rounded-xl text-white shadow-xl hover:shadow-inner focus:outline-none transition duration-500 ease-in-out  transform hover:-translate-x hover:scale-105"
               href="{{ path('spent_new') }}">Create new
            </a>
        </div>
    </div>
{% endblock %}
