{% extends 'base.html.twig' %}

{% block title %}Spent index{% endblock %}

{% block body %}
    <h1>Spent index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Expense_name</th>
                <th>Cost</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for spent in spents %}
            <tr>
                <td>{{ spent.id }}</td>
                <td>{{ spent.expenseName }}</td>
                <td>{{ spent.cost }}</td>
                <td>
                    <a href="{{ path('spent_show', {'id': spent.id}) }}">show</a>
                    <a href="{{ path('spent_edit', {'id': spent.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('spent_new') }}">Create new</a>
{% endblock %}
